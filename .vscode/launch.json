{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Backend + Frontend",
      "configurations": ["Backend (uvicorn)", "Frontend (vite)"],
      "stopAll": true
    }
  ],
  "configurations": [
    {
      "name": "Backend (uvicorn)",
      "type": "debugpy",
      "request": "launch",
      "python": "${workspaceFolder}/backend/.venv/Scripts/python.exe",
      "module": "uvicorn",
      "args": ["main:app", "--reload", "--host", "0.0.0.0", "--port", "8420"],
      "cwd": "${workspaceFolder}/backend",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "DATABASE_PATH": "${workspaceFolder}/data/muenzbox.db",
        "USE_MOCK_ADAPTERS": "true"
      },
      "jinja": true
    },
    {
      "name": "Frontend (vite)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/frontend",
      "console": "integratedTerminal"
    }
  ]
}
