# Simulations-Modus (kein echter MikroTik / Nintendo nötig)
USE_MOCK_ADAPTERS=true

# TV-Freigabe: MikroTik ODER FritzBox (control_type pro Gerät in DB wählen)

# MikroTik Router (control_type=mikrotik)
MIKROTIK_HOST=192.168.1.1
MIKROTIK_USER=freigabe-api
MIKROTIK_PASS=secret
MIKROTIK_TV_ADDRESS_LIST_COMMENT=Fernseher
TV_IP=192.168.1.100

# FritzBox (control_type=fritzbox) – Zugangsprofil per LUA-Interface wechseln
FRITZBOX_HOST=fritz.box
FRITZBOX_USER=
FRITZBOX_PASS=secret
FRITZBOX_ALLOWED_PROFILE=Standard
FRITZBOX_BLOCKED_PROFILE=Gesperrt

# Nintendo Switch (Parental Controls)
NINTENDO_TOKEN=your_token_here

# Admin PIN (Klartext) - Standard ist 1234, einfach ändern
ADMIN_PIN=1234

# Security
SECRET_KEY=change-this-to-a-random-secret-key-minimum-32-chars
